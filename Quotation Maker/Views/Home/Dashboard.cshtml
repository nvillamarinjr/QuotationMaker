    <div class="container-fluid mt-0">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title mb-0 text-dark" style="font-weight: bold; font-size:20px;">List of Items</h2>
                    </div>
                    <div class="card-body">
                        <div class="text-end">
                            <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#itemModal">
                                <i class="fa fa-plus"></i>
                                Add Item
                            </button>
                        </div>

                        <table id="itemTable" class="table table-bordered table-striped">
                            <thead class="table-light">
                                <tr>
                                    <th>Item Description</th>
                                    <th>Qty</th>
                                    <th>Unit</th>
                                    <th>Rate</th>
                                    <th>Amount</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>

                        <div class="input-group justify-content-end mb-2">
                            <span class="input-group-text" id="inputGroup-sizing-default">Sub Total:</span>
                            <input type="text" class="form-control" id="totalitemsamount" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" placeholder="N/A" readonly>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid mt-0">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title mb-0 text-dark" style="font-weight: bold; font-size:20px;">Labor Description</h2>
                    </div>
                    <div class="card-body">
                        <div class="text-end">
                            <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#laborModal">
                                <i class="fa fa-plus"></i>
                                Add Labor
                            </button>
                        </div>

                        <table id="laborTable" class="table table-bordered table-striped">
                            <thead class="table-light">
                                <tr>
                                    <th>Labor Description</th>
                                    <th>Count</th>
                                    <th>Working Day</th>
                                    <th>Rate</th>
                                    <th>Amount</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>

                        <div class="input-group justify-content-end mb-2">
                            <span class="input-group-text" id="inputGroup-sizing-default">Sub Total:</span>
                            <input type="text" class="form-control" id="totallaboramount" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" placeholder="N/A" readonly>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="container-fluid mt-0">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title mb-0 text-dark" style="font-weight: bold; font-size:20px;">Total Amounts</h2>
                    </div>
                    <div class="card-body">

                        <div class="row justify-content-center mt-4">
                            <!-- Left Column -->
                            <div class="col-md-5">
                                <div class="mb-2 row">
                                    <label class="col-sm-4 col-form-label">Materials Sub Total:</label>
                                    <div class="col-sm-8">
                                        <input type="text" id="materialtotal" class="form-control" placeholder="N/A" readonly>
                                    </div>
                                </div>

                                <div class="mb-2 row">
                                    <label class="col-sm-4 col-form-label">Labor Sub Total:</label>
                                    <div class="col-sm-8">
                                        <input type="text" id="labortotal" class="form-control" placeholder="N/A" readonly>
                                    </div>
                                </div>

                                <div class="mb-2 row">
                                    <label class="col-sm-4 col-form-label">Vat:</label>
                                    <div class="col-sm-8">
                                        <input type="text" id="vat" class="form-control" placeholder="N/A" readonly>
                                    </div>
                                </div>

                                <div class="mb-2 row">
                                    <label class="col-sm-4 col-form-label">Total:</label>
                                    <div class="col-sm-8">
                                        <input type="text" id="totalamounts" class="form-control" placeholder="N/A" readonly>
                                    </div>
                                </div>
                                <div class="mb-2 row">
                                    <label class="col-sm-4 col-form-label">Total in words:</label>
                                    <label class="ml-1" id="inWords" style="display:block;margin-top:10px;font-weight:bold;color:red;"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




    <div class="text-center mt-0 mb-4">
        <button type="button" id="generateQuotation" class="btn btn-success">
            <i class="fa fa-check"></i>
            Generate Quotation
        </button>
    </div>



    <!-- MODAL -->
    <div class="modal fade" id="itemModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-3" id="exampleModalLabel">Add Item</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex justify-content-center">
                    <form>
                        <div class="input-group mb-2">
                            <span class="input-group-text" id="inputGroup-sizing-default">Item:</span>
                            <select id="item" class="form-select">
                            </select>
                        </div>

                        <div class="input-group mb-2">
                            <span class="input-group-text" id="inputGroup-sizing-default">Unit:</span>
                            <select id="unit" class="form-select">
                                <option value="">Select a unit...</option>
                                <option value="pcs">pcs</option>
                                <option value="meters">meters</option>
                                <option value="pack">pack</option>
                                <option value="pack">box</option>
                                <option value="pack">set</option>
                                <option value="pack">roll</option>
                                <option value="pack">core</option>
                            </select>
                        </div>

                        <div class="input-group mb-2">
                            <span class="input-group-text" id="inputGroup-sizing-default">Quantity:</span>
                            <input type="number" class="form-control" id="quantity" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" value="1" min="1" disabled>
                        </div>

                        <div class="input-group mb-2">
                            <span class="input-group-text" id="inputGroup-sizing-default">Rate:</span>
                            <input type="text" class="form-control" id="rate" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" placeholder="N/A" readonly>
                        </div>

                        <div class="input-group mb-2">
                            <span class="input-group-text" id="inputGroup-sizing-default">Total Amount:</span>
                            <input type="text" class="form-control" id="totalamount" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" placeholder="N/A" readonly>
                        </div>

                        @*<div class="input-group mb-3">
                                <span class="input-group-text" id="inputGroup-sizing-default">Amount:</span>
                                <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" placeholder="N/A">
                         </div>*@
                    </form>
                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <button type="button" id="addItemModal" class="btn btn-success">Add</button>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <!-- labor -->
    <div class="modal fade" id="laborModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-3" id="exampleModalLabel">Add Labor</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex justify-content-center">
                    <form>
                        <div class="input-group mb-2">
                            <span class="input-group-text" id="inputGroup-sizing-default">Description:</span>
                            <select id="desc" class="form-select" style="width: 50%;">
                            </select>
                        </div>

                        <div class="input-group mb-2">
                            <span class="input-group-text" id="inputGroup-sizing-default">Working Day:</span>
                            <input type="text" class="form-control" id="work" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" value="lot" placeholder="Enter data...">
                        </div>

                        <div class="input-group mb-2">
                            <span class="input-group-text" id="inputGroup-sizing-default">Count:</span>
                            <input type="number" class="form-control" id="count" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" value="1" min="1" disabled>
                        </div>

                        <div class="input-group mb-2">
                            <span class="input-group-text" id="inputGroup-sizing-default">Rate:</span>
                            <input type="text" class="form-control" id="laborrate" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" placeholder="N/A" readonly>
                        </div>

                        <div class="input-group mb-2">
                            <span class="input-group-text" id="inputGroup-sizing-default">Total Amount:</span>
                            <input type="text" class="form-control" id="totallabor" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" placeholder="N/A" readonly>
                        </div>

                        @*<div class="input-group mb-3">
                                <span class="input-group-text" id="inputGroup-sizing-default">Amount:</span>
                                <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" placeholder="N/A">
                          </div>*@
                    </form>
                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <button type="button" class="btn btn-success" id="addLaborModal">Add</button>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</body>
