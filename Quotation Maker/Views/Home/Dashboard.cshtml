        label {
            font-weight: bold;
        }

        .select2-container--bootstrap4 .select2-selection__rendered {
            display: block !important;
            width: 100% !important;
            overflow: hidden !important;
            text-overflow: ellipsis !important;
            white-space: nowrap !important;
        }

        .modal-body {
            position: relative;
            -ms-flex: 1 1 auto;
            flex: 1 1 auto;
            padding: 17% !important;
            padding-top: 5% !important;
            padding-bottom: 5% !important;
        }
    </style>

    <div class="container-fluid mt-6">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title mb-0 text-dark" style="font-weight: bold; font-size:20px;">Quotation Details</h2>
                    </div>
                    <div class="row justify-content-center mt-4">
                        <!-- Left Column -->
                        <div class="col-md-5">
                            <div class="mb-3 row">
                                <label class="col-sm-4 col-form-label">Quotation #:</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="quotationnum" placeholder="Enter Quotation #" readonly>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label class="col-sm-4 col-form-label">Quotation Date:</label>
                                <div class="col-sm-8">
                                    <input type="text" id="quotationdate" class="form-control" readonly>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label class="col-sm-4 col-form-label">Change Validity:</label>
                                <div class="col-sm-8">
                                    <select id="changevalidity" class="form-select">
                                        <option value="">Select validity...</option>
                                        <option value="3">3 Months</option>
                                        <option value="6">6 Months</option>
                                    </select>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label class="col-sm-4 col-form-label">Validity:</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="validity" placeholder="N/A" readonly>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row justify-content-center mt-4">
                        <!-- Left Column -->
                        <div class="col-md-5">
                            <div class="mb-3 row">
                                <label class="col-sm-4 col-form-label">JR/Reference #:</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" placeholder="Enter JR Number">
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label class="col-sm-4 col-form-label">Requestor:</label>
                                <div class="col-sm-8">
                                    <select id="requestor" class="form-select">
                                    </select>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label class="col-sm-4 col-form-label">Department:</label>
                                <div class="col-sm-8">
                                    <input type="text" id="department" class="form-control" placeholder="N/A" readonly>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label class="col-sm-4 col-form-label">Local No:</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="localnum" placeholder="N/A" readonly>
                                </div>
                            </div>
                        </div>

                        <!-- Right Column -->
                        <div class="col-md-5">
                            <div class="mb-3 row">
                                <label class="col-sm-4 col-form-label">Quotation to:</label>
                                <div class="col-sm-8">
                                    <textarea class="form-control" id="quotationTo" rows="2" placeholder="..."></textarea>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label class="col-sm-4 col-form-label">Attention:</label>
                                <div class="col-sm-8">
                                    <input type="text" id="attention" class="form-control" placeholder="N/A">
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label class="col-sm-4 col-form-label">Thru:</label>
                                <div class="col-sm-8">
                                    <input type="text" id="thru" class="form-control" placeholder="N/A">
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label class="col-sm-4 col-form-label">Subject:</label>
                                <div class="col-sm-8">
                                    <textarea class="form-control" id="subject" rows="1" placeholder="Enter a subject..."></textarea>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>

