    <style>

        /* ✅ Make select2 container behave like a Bootstrap input */
        .select2-container--default .select2-selection--single {
            height: calc(2.25rem + 2px);
            border: 1px solid #ced4da;
            border-radius: 0.375rem;
            display: flex;
            align-items: center;
        }

            /* ✅ Truncate selected text based on container width */
            .select2-container--default .select2-selection--single .select2-selection__rendered {
                display: block;
                width: 100%;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
                padding-right: 1.5rem; /* space for the dropdown arrow */
            }

        .dataTables_empty {
            text-align: center !important;
        }

        /*.input-group-text {
                    min-width: 140px;*/ /* makes all labels same width */
        /*justify-content: end;*/ /* aligns text to right edge */
