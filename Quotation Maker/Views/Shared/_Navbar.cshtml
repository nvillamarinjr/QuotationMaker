<script>
    function updateDateTime() {
        const now = new Date();

        const options = {
            weekday: 'short',
            year: 'numeric',
            month: 'short',
            day: 'numeric',
            hour: '2-digit',
            minute: '2-digit',
            second: '2-digit'
        };

        const formatted = now.toLocaleDateString('en-US', options);
        document.getElementById('datetime').textContent = formatted;
    }

    // Update every second
    setInterval(updateDateTime, 1000);
    updateDateTime();
</script>
